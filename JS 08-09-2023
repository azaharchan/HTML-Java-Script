function callFunction(){
var a= document.getElementById("fname").value;
if (!a){
alert("first name is requried")
return false
}

var b= document.getElementById("lname").value;
if (!b){
alert("last name is requried")
return false
}
var c= document.getElementById("phone").value;
if (!c){
alert("Mobile number is requried")
return false
}
var d= document.getElementById("birthday").value;

if (!d){
alert("Date of Birth is requried")
return false
}
console.log("First name:" +" " +a);
console.log("Last name:" +" "+  b);
console.log("Mobile number:" +" " + c);
console.log("Date Of Birth" +" "+  d);
}
